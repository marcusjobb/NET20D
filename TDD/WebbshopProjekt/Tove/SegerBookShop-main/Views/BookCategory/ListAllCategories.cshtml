@model IEnumerable<BookShop.Models.BookCategory>
@{
    ViewData["Title"] = "ShowSearchResults";
}
<div class="container p-2">
    <div class="row pt-4">
        <div class="=" col-6">
            <h2 class="text-primary">Search Results</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="BookCategory" asp-action="Create" class="btn bg-primary">Create New Book Category</a>
        </div>
        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" stryle="width:100%">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td width="20%">@category.Id</td>
                            <td width="20%">@category.Name</td>
                            <td width="40%">
                                <div class="w-100 btn-group" role-"group">
                                    <a asp-controller="BookCategory" asp-action="Update" asp-route-Id="@category.Id" class="btn btn-primary mx-1">Update </a>
                                    <a asp-controller="BookCategory" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger mx-1">Delete </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No book categories created yet</p>
        }
        <div>
            <a asp-controller="AdminLogin" asp-action="LoginVerification">Back to Admin Menu</a>
        </div>

    </div>
</div>

