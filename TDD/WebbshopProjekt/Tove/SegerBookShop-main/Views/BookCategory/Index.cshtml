
<div>
    <a asp-controller="BookCategory" asp-action="ListAllCategories">Show me all categories</a>
</div>
<h5>Search for all books in a specific category, using book category id</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowCategoryResults">
            <div class="form-group">
                <label for="id" class="control-label"></label>
                <input name="id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h5>Search for a book category using a keyword</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowCategoryResultsWithKeyword">
            <div class="form-group">
                <label for="keyword" class="control-label"></label>
                <input name="keyword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

