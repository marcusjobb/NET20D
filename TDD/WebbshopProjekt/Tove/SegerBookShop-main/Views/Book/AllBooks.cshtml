@model IEnumerable<BookShop.Models.Book>
@{
    ViewData["Title"] = "ShowSearchResults";
}
<div class="container p-2">
    <div class="row pt-4">
        <div class="=" col-6">
            <h2 class="text-primary">Search Results</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Book" asp-action="Create" class="btn bg-primary">Create New Book</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" stryle="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        CategoryId
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                <tr>
                    <td width="20%">@book.Id</td>
                    <td width="20%">@book.Title</td>
                    <td width="20%">@book.Author</td>
                    <td width="20%">@book.Price</td>
                    <td width="20%">@book.Amount</td>
                    <td width="20%">@book.CategoryId</td>
                    <td width="40%">
                        <div class="w-100 btn-group" role-"group">
                            <a asp-controller="Book" asp-action="Update" asp-route-Id="@book.Id" class="btn btn-primary mx-1">Update </a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-Id="@book.Id" class="btn btn-danger mx-1">Delete </a>
                            <a asp-controller="Book" asp-action="StockCorrection" asp-route-Id="@book.Id" class="btn btn-primary mx-1">Stock Correction </a>
                            <a asp-controller="Book" asp-action="AddBookToCategory" asp-route-Id="@book.Id" class="btn btn-primary mx-1">Add book to category </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No books created yet</p>
    }
    <div>
        <a asp-controller="AdminLogin" asp-action="LoginVerification">Back to Admin Menu</a>
    </div>


</div>

