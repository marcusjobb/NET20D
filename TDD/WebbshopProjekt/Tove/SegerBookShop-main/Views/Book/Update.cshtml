@model BookShop.Models.Book

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <h2 class="text-black-50 pl-3">Update Book</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <input asp-for="Title" class="form-control" />
                    <input asp-for="Title" disabled class="form-control" />
                </div>
                <div class="col-4">
                    <input asp-for="Author" class="form-control" />
                    <input asp-for="Author" disabled class="form-control" />
                </div>
                <div class="col-4">
                    <input asp-for="Price" class="form-control" />
                    <input asp-for="Price" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Update" />
                    </div>
                    <div class="col">
                        <a asp-action="AllBooks" class="btn btn-success w-75">Back</a>
                    </div>
                </div>
            </div>
        </div>

    </div>




</form>




